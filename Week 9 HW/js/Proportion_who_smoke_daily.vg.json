{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Proportion of Daily Smokers in OECD Countries, 2022 or Nearest Year",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "YOUR_PATH/ne_110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "YOUR_PATH/cleaned_smoking_data.json"
      },
      "mark": {
        "type": "geoshape",
        "tooltip": {"content": "data"}
      },
      "encoding": {
        "color": {
          "field": "Persons (%)",
          "type": "quantitative",
          "title": "Percentage of Daily Smokers",
          "scale": {"scheme": "reds"}
        }
      }
    }
  ]
}
