{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Number and Crude Rate of Drug-Related Ambulance Attendances by Drug Type in 2015–2023",
        "fontSize": 14,
        "fontWeight": "bold",
        "anchor": "middle",
        "color": "#000000"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/SylvvvvvvviaZ/FIT3179/main/VISUALISATION_2/data/Drug_related_ambulance_data.csv"
    },
    "vconcat": [
        {
            "width": 600,
            "height": 400,
            "encoding": {
                "x": {
                    "field": "Year",
                    "timeUnit": "year",
                    "title": "Year"
                },
                "y": {
                    "title": "Number",
                    "field": "Number",
                    "type": "quantitative",
                    "aggregate": "sum",
                    "axis": {
                        "format": ".0f"
                    }
                },
                "color": {
                    "condition": {
                        "param": "brush",
                        "title": "Type",
                        "field": "Type",
                        "type": "nominal",
                        "scale": {
                            "range": [
                                "#4E79A7",
                                "#9CB4CE",
                                "#C7D2DF",
                                "#CF9A9A",
                                "#DFC6C6"
                            ]
                        }
                    },
                    "value": "gray"
                },
                "opacity": {
                    "condition": {
                        "param": "brush",
                        "value": 1
                    },
                    "value": 0.3
                }
            },
            "layer": [
                {
                    "params": [
                        {
                            "name": "brush",
                            "select": {
                                "type": "interval",
                                "encodings": [
                                    "x"
                                ]
                            }
                        }
                    ],
                    "transform": [
                        {
                            "filter": {
                                "param": "click"
                            }
                        }
                    ],
                    "mark": {
                        "type": "line",
                        "point": true,
                        "tooltip": true,
                        "strokeWidth": 7,
                        "stroke": "transparent"
                    }
                },
                {
                    "mark": "line"
                },
                {
                    "mark": "rule",
                    "encoding": {
                        "x": {},
                        "y": {
                            "datum": 652,
                            "type": "quantitative"
                        },
                        "color": {
                            "value": "#AA4D4D"
                        },
                        "size": {
                            "value": 2
                        }
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "align": "right",
                        "dx": -5,
                        "dy": -5
                    },
                    "encoding": {
                        "x": {
                            "field": "Year",
                            "timeUnit": "year",
                            "aggregate": "max"
                        },
                        "y": {
                            "datum": 660,
                            "type": "quantitative"
                        },
                        "text": {
                            "value": "Average Number of Ambulance Attendances ≈ 652"
                        },
                        "color": {
                            "value": "#AA4D4D"
                        }
                    }
                }
            ]
        },
        {
            "encoding": {
                "color": {
                    "condition": {
                        "param": "click",
                        "field": "Type",
                        "scale": {
                            "range": [
                                "#6f1926",
                                "#de324c",
                                "#f4895f",
                                "#f8e16f",
                                "#95cf92",
                                "#369acc",
                                "#9656a2",
                                "#cbabd1"
                            ]
                        }
                    },
                    "value": "gray"
                },
                "x": {
                    "aggregate": "average",
                    "field": "Rate",
                    "title": "Crude Rate (Per 100,000 population)",
                    "type": "quantitative",
                    "axis": {
                        "format": ".2f"
                    }
                },
                "y": {
                    "title": "Type",
                    "field": "Type",
                    "type": "nominal"
                }
            },
            "width": 600,
            "height": 120,
            "mark": {
                "type": "bar",
                "tooltip": true
            },
            "params": [
                {
                    "name": "click",
                    "select": {
                        "type": "interval",
                        "encodings": [
                            "color"
                        ]
                    }
                }
            ],
            "transform": [
                {
                    "filter": {
                        "param": "brush"
                    }
                }
            ]
        }
    ]
}