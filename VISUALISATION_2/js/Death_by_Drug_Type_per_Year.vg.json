{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/SylvvvvvvviaZ/FIT3179/main/VISUALISATION_2/data/Death_by_drug_type_per_year.csv"
  },
  "title": "Drug-Induced Deaths by Drug Type and Year",
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "Drug Type",
      "type": "nominal",
      "title": "Drug Type"
    },
    "color": {
      "field": "Death Number",
      "type": "quantitative",
      "title": "Deaths",
      "aggregate": "sum"
    },
    "tooltip": [
      {"field": "Year", "type": "quantitative", "title": "Year"},
      {"field": "Drug Type", "type": "nominal", "title": "Drug Type"},
      {"field": "Death Number", "type": "quantitative", "title": "Death Number"}
    ]
  },
  "config": {
    "view": {
      "strokeWidth": 0,
      "step": 20
    },
    "axis": {
      "domain": false
    }
  }
}
