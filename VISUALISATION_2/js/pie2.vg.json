{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 550,
    "height": 300,
    "title": {
        "text": "Most Common Associated Causes For Drug-induced Deaths in 2019â€“2022",
        "fontSize": 14,
        "fontWeight": "bold",
        "anchor": "middle",
        "color": "#000000"
    },
    "description": "A donut chart showing psychosocial risk factors for drug-induced deaths with a year slider.",
    "data": {
        "url": "https://raw.githubusercontent.com/SylvvvvvvviaZ/FIT3179/main/VISUALISATION_2/data/Associated_causes_for_drug-induced_deaths.csv"
    },
    "transform": [
        {
            "filter": "datum['Year'] == yearSelection.Year"
        }
    ],
    "mark": {
        "type": "arc",
        "innerRadius": 50
    },
    "encoding": {
        "theta": {
            "field": "Percentage (%)",
            "type": "quantitative"
        },
        "color": {
            "field": "Associated causes",
            "type": "nominal",
            "legend": {
                "titleFontSize": 12,
                "labelFontSize": 8
            },
            "scale": {
                "range": [
                    "#F1EFE3",
                    "#A2AA9F",
                    "#D4A797",
                    "#A5B5A9",
                    "#3A7C75",
                    "#79926E",
                    "#FB9B47",
                    "#EFCF88",
                    "#a5c2cd",
                    "#dadae4",
                    "#c4c9c2",
                    "#7e8cad",
                    "#e19d92"
                ]
            }
        }
    },
    "view": {
        "stroke": null
    },
    "selection": {
        "yearSelection": {
            "type": "single",
            "fields": [
                "Year"
            ],
            "bind": {
                "input": "range",
                "min": 2019,
                "max": 2022,
                "step": 1
            },
            "init": {
                "Year": 2021
            }
        }
    }
}