{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Number and Crude Rate of Drug-Related Ambulance Attendances by Drug Type in 2015â€“2023",
    "fontSize": 14,
    "fontWeight": "bold",
    "anchor": "middle",
    "color": "#000000"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/SylvvvvvvviaZ/FIT3179/main/VISUALISATION_2/data/Drug_related_ambulance_data.csv"
  },
  "vconcat": [
    {
      "width": 600,
      "height": 400,
      "encoding": {
        "x": {
          "field": "Year",
          "timeUnit": "year",
          "title": "Year"
        },
        "y": {
          "title": "Number",
          "field": "Number",
          "type": "quantitative",
          "aggregate": "sum",
          "axis": {
            "format": ".0f"
          }
        },
        "color": {
          "condition": {
            "param": "brush",
            "title": "Type",
            "field": "Type",
            "type": "nominal",
            "scale": {
              "range": [
                "#4E79A7",
                "#9CB4CE",
                "#C7D2DF",
                "#CF9A9A",
                "#DFC6C6"
              ]
            }
          },
          "value": "gray"
        },
        "opacity": {
          "condition": {
            "param": "brush",
            "value": 1
          },
          "value": 0.3
        }
      },
      "layer": [
        {
          "params": [
            {
              "name": "brush",
              "select": {
                "type": "interval",
                "encodings": [
                  "x"
                ]
              }
            }
          ],
          "transform": [
            {
              "filter": {
                "param": "click"
              }
            }
          ],
          "mark": {
            "type": "line",
            "point": true,
            "tooltip": true,
            "strokeWidth": 7,
            "stroke": "transparent"
          }
        },
        {
          "mark": "line"
        },
        {
          "mark": {
            "type": "rule",
            "color": "#2e0b0b",
            "strokeDash": [5, 5],
            "size": 2
          },
          "encoding": {
            "y": {
              "datum": 652
            },
            "x": {
              "field": "Year",
              "type": "temporal"
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 5,
            "dy": -5,
            "fontSize": 12,
            "fontWeight": "bold",
            "color": "#450505"
          },
          "encoding": {
            "x": {
              "field": "Year"
            },
            "y": {
              "datum": 652
            },
            "text": {"value": "Mean Value"}
          }
        }
      ]
    },
    {
      "encoding": {
        "color": {
          "condition": {
            "param": "click",
            "field": "Type",
            "scale": {
              "range": [
                "#6f1926",
                "#de324c",
                "#f4895f",
                "#f8e16f",
                "#95cf92",
                "#369acc",
                "#9656a2",
                "#cbabd1"
              ]
            }
          },
          "value": "gray"
        },
        "x": {
          "aggregate": "average",
          "field": "Rate",
          "title": "Crude Rate (Per 100,000 population)",
          "type": "quantitative",
          "axis": {
            "format": ".2f"
          }
        },
        "y": {
          "title": "Type",
          "field": "Type",
          "type": "nominal"
        }
      },
      "width": 600,
      "height": 120,
      "mark": {
        "type": "bar",
        "tooltip": true
      },
      "params": [
        {
          "name": "click",
          "select": {
            "type": "interval",
            "encodings": [
              "color"
            ]
          }
        }
      ],
      "transform": [
        {
          "filter": {
            "param": "brush"
          }
        }
      ]
    }
  ]
}
