{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": {
        "text": "Alcohol Consumption Among People Aged 15 and Over In OECD Countries",
        "fontSize": 15,
        "fontWeight": "bold",
        "anchor": "middle",
        "color": "#000000"
    },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/SylvvvvvvviaZ/FIT3179/main/VISUALISATION_2/js/ne_110m_graticules_30.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "#d4d4d4",
                "strokeWidth": 0.5
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/SylvvvvvvviaZ/FIT3179/main/VISUALISATION_2/js/ne_110m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "#DFC6C6",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/SylvvvvvvviaZ/FIT3179/main/VISUALISATION_2/js/ne_110m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/SylvvvvvvviaZ/FIT3179/main/VISUALISATION_2/data/Alcohol_consumption_per_capitaof_pure_alcohol.csv"
                        },
                        "key": "Country",
                        "fields": [
                            "Litres per capita of pure alcohol",
                            "Latest year of data"
                        ]
                    }
                },
                {
                    "filter": "datum['Litres per capita of pure alcohol'] != null"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "color": {
                    "field": "Litres per capita of pure alcohol",
                    "type": "quantitative",
                    "scale": {
                        "domain": [
                            0,
                            20
                        ],
                        "range": [
                            "#E19D92",
                            "#AA4D4D"
                        ]
                    },
                    "legend": {
                        "title": "Litres of Pure Alcohol"
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Litres per capita of pure alcohol",
                        "type": "quantitative",
                        "title": "Litres per Capita"
                    },
                    {
                        "field": "Latest year of data",
                        "type": "nominal",
                        "title": "Latest Year of Data"
                    }
                ]
            }
        }
    ]
}