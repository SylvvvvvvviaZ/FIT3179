{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 700,
    "title": {
      "text": "Drug-Related Ambulance Attendances by State",
      "fontSize": 20,
      "fontWeight": "bold",
      "anchor": "start",
      "color": "#333"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/SylvvvvvvviaZ/FIT3179/main/VISUALISATION_2/data/drug_related_ambulance.csv"
    },
    "params": [
      {
        "name": "State_selection",
        "bind": {
          "input": "select",
          "options": [null, "ACT", "NSW", "NT", "QLD", "SA", "TAS", "VIC", "WA"],
          "labels": ["Show All", "ACT", "NSW", "NT", "QLD", "SA", "TAS", "VIC", "WA"],
          "name": "State Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "State_selection == null || datum.State == State_selection"}
    ],
    "encoding": {
      "x": {
        "field": "Number",
        "type": "quantitative",
        "title": "Number of Incidents",
        "axis": {"grid": true, "labelFontSize": 14, "titleFontSize": 16}
      },
      "y": {
        "field": "Rate",
        "type": "quantitative",
        "title": "Rate of Incidents",
        "axis": {"grid": true, "labelFontSize": 14, "titleFontSize": 16}
      },
      "color": {
        "field": "Type",
        "type": "nominal",
        "title": "Incident Type",
        "scale": {"scheme": "category10"}
      },
      "size": {
        "field": "Rate",
        "type": "quantitative",
        "scale": {"range": [10, 300]},
        "legend": {"title": "Rate (Size)", "titleFontSize": 14, "labelFontSize": 12}
      },
      "opacity": {"value": 0.7},
      "tooltip": [
        {"field": "Year", "type": "ordinal", "title": "Year"},
        {"field": "Month", "type": "ordinal", "title": "Month"},
        {"field": "Type", "type": "nominal", "title": "Incident Type"},
        {"field": "State", "type": "nominal", "title": "State"},
        {"field": "Number", "type": "quantitative", "title": "Number of Incidents"},
        {"field": "Rate", "type": "quantitative", "title": "Rate of Incidents"}
      ]
    },
    "mark": {
      "type": "circle",
      "stroke": "black",
      "strokeWidth": 0.5
    }
  }
  