{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 550,
    "title": {
      "text": "Number and Crude Rate (per 100,000 Population) of Drug-Related Ambulance Attendances by Drug Type and Jurisdiction in 2015â€“2023",
      "fontSize": 14,
      "fontWeight": "bold",
      "anchor": "middle",
      "color": "#000000"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/SylvvvvvvviaZ/FIT3179/main/VISUALISATION_2_Critique/data/drug_related_ambulance.csv"
    },
    "params": [
      {
        "name": "State_selection",
        "bind": {
          "input": "select",
          "options": [null, "ACT", "NSW", "NT", "QLD", "VIC"],
          "labels": ["Show All", "ACT", "NSW", "NT", "QLD", "VIC"],
          "name": "State Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "State_selection == null || datum.State == State_selection"}
    ],
    "encoding": {
      "x": {
        "field": "Number",
        "type": "quantitative",
        "title": "Number of Incidents",
        "axis": {"grid": true, "labelFontSize": 14, "titleFontSize": 12}
      },
      "y": {
        "field": "Rate",
        "type": "quantitative",
        "title": "Rate of Incidents",
        "axis": {"grid": true, "labelFontSize": 14, "titleFontSize": 12}
      },
      "color": {
        "field": "Type",
        "type": "nominal",
        "title": "Incident Type",
        "scale": {"range": ["#e19d92", "#eac47c", "#dbc0af", "#c4c9c2", "#a5c2cd", "#dadae4"]}
      },
      "size": {
        "field": "Rate",
        "type": "quantitative",
        "scale": {"range": [50, 400]},
        "legend": {"title": "Rate (Size)", "titleFontSize": 11, "labelFontSize": 10}
      },
      "opacity": {"value": 0.7},
      "tooltip": [
        {"field": "Year", "type": "ordinal", "title": "Year"},
        {"field": "Month", "type": "ordinal", "title": "Month"},
        {"field": "Type", "type": "nominal", "title": "Incident Type"},
        {"field": "State", "type": "nominal", "title": "State"},
        {"field": "Number", "type": "quantitative", "title": "Number of Incidents"},
        {"field": "Rate", "type": "quantitative", "title": "Rate of Incidents"}
      ]
    },
    "mark": {
      "type": "circle",
      "stroke": "white",
      "strokeWidth": 0.5
    }
  }
  